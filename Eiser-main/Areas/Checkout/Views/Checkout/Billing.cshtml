@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ECommerce.BAL
@model ECommerce.Areas.Address.Models.AddressModel


<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Product Checkout</h2>
                    <p>Very us move be blessed multiply night</p>
                </div>
                <div class="page_link">
                    <a href="index.html">Home</a>
                    <a href="checkout.html">Product Checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Checkout Area =================-->

<section class="checkout_area section_gap">
    <form class="row contact_form"
          method="post"
          asp-area="Checkout" asp-controller="Checkout" asp-action="Address_Insert" asp-route-userid="@Convert.ToInt32(CommenVariable.UserID())"
          novalidate="novalidate">
        <div class="container">
            <div class="billing_details">
                <div class="row">
                    <h3>Billing Details</h3>

                    <div class="col-md-12 form-group p_star">
                        <input type="text"
                               class="form-control"
                               id="add1"
                               asp-for="Address" />
                        <label class="placeholder"
                               data-placeholder="Address"></label>
                    </div>
                    <div class="col-md-12 form-group p_star">
                        <input type="text"
                               class="form-control"
                               id="city"
                               asp-for="Country"
                               name="city" />
                        <label class="placeholder" data-placeholder="Country"></label>
                    </div>
                    <div class="col-md-12 form-group p_star">
                        <input type="text"
                               class="form-control"
                               id="city"
                               asp-for="State"
                               name="city" />
                        <label class="placeholder" data-placeholder="State"></label>
                    </div>
                    <div class="col-md-12 form-group p_star">
                        <input type="text"
                               class="form-control"
                               id="city"
                               asp-for="City"
                               name="city" />
                        <label class="placeholder" data-placeholder="City"></label>
                    </div>
                    <div class="col-md-12 form-group">
                        <input type="text"
                               class="form-control"
                               id="zip"
                               asp-for="Postal"
                               name="zip"
                               placeholder="Postcode/ZIP" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button class="main_btn btn-lg btn-block">Checkout</button>
                </div>
            </div>
        </div>
    </form>
</section>

<!--================End Checkout Area =================-->