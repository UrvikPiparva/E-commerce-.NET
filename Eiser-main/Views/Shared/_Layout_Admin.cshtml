﻿@using ECommerce.BAL
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>General Dashboard</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/assets2/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets2/modules/fontawesome/css/all.min.css">

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/assets2/modules/jqvmap/dist/jqvmap.min.css">
    <link rel="stylesheet" href="~/assets2/modules/weather-icon/css/weather-icons.min.css">
    <link rel="stylesheet" href="~/assets2/modules/weather-icon/css/weather-icons-wind.min.css">
    <link rel="stylesheet" href="~/assets2/modules/summernote/summernote-bs4.css">

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/assets2/css/style.css">
    <link rel="stylesheet" href="~/assets2/css/components.css">
    <!-- Start GA -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-94034622-3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-94034622-3');
    </script>
    <!-- /END GA -->
</head>

<body>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar">
                <form class="form-inline mr-auto">
                    @*<ul class="navbar-nav mr-3">
                        <li><a href="#" data-toggle="sidebar" class="nav-link nav-link-lg"><i class="fas fa-bars"></i></a></li>
                        <li><a href="#" data-toggle="search" class="nav-link nav-link-lg d-sm-none"><i class="fas fa-search"></i></a></li>
                    </ul>
                    <div class="search-element">
                        <input class="form-control" type="search" placeholder="Search" aria-label="Search" data-width="250">
                        <button class="btn" type="submit"><i class="fas fa-search"></i></button>
                    </div>*@
                </form>
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                            <img alt="image" src="~/assets2/img/avatar/avatar-1.png" class="rounded-circle mr-1">
                            <div class="d-sm-none d-lg-inline-block">Hi, @CommenVariable.UserName()</div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <div class="dropdown-title">@CommenVariable.Email()</div>
                            <div class="dropdown-divider"></div>
                            <a asp-area="SEC_User" asp-controller="SEC_User" asp-action="Logout" class="dropdown-item has-icon text-danger">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>

            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="SEC_AdminDashboard">E-Commerce</a>
                    </div>
                    <div class="sidebar-brand sidebar-brand-sm">
                        <a asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="SEC_AdminDashboard">St</a>
                    </div>
                    <ul class="sidebar-menu">
                        @*<li class="menu-header">Dashboard</li>
                        <li class="dropdown active">
                            <a asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="SEC_AdminDashboard" class="nav-link has-dropdown"><i class="fas fa-fire"></i><span>Dashboard</span></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="SEC_AdminDashboard">Ecommerce Dashboard</a></li>
                            </ul>
                        </li>*@
                        <li class="menu-header">Products</li>
                        <li class="dropdown">
                            <a href="#" class="nav-link has-dropdown" data-toggle="dropdown"><i class="fas fa-columns"></i> <span>Products</span></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="Product" asp-controller="Product" asp-action="ProductList">Product List</a></li>
                                <li><a class="nav-link" asp-area="Product" asp-controller="Product" asp-action="ProductAdd">Add Product</a></li>
                                @*<li><a class="nav-link" asp-area="Product" asp-controller="Product" asp-action="DeletedProductList">Disabled Product</a></li>*@
                            </ul>
                        </li>
                        <li class="menu-header">Category</li>
                        <li class="dropdown">
                            <a href="#" class="nav-link has-dropdown"><i class="far fa-file-alt"></i> <span>Category</span></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="Category" asp-controller="Category" asp-action="CategoryList">Category List</a></li>
                                <li><a class="nav-link" asp-area="Category" asp-controller="Category" asp-action="CategoryAdd">Add Category</a></li>
                            </ul>
                        </li>
                        <li class="menu-header">Users</li>
                        <li class="dropdown">
                            <a href="#" class="nav-link has-dropdown"><i class="far fa-user"></i> <span>User</span></a>
                            <ul class="dropdown-menu">
                                <li><a asp-area="SEC_User" asp-controller="SEC_User" asp-action="SEC_UserList">Active User</a></li>
                            </ul>
                        </li>
                        <li class="menu-header">Orders</li>
                        <li class="dropdown">
                            <a href="#" class="nav-link has-dropdown"><i class="far fa-user"></i> <span>Order</span></a>
                            <ul class="dropdown-menu">
                                <li><a asp-area="Order" asp-controller="Order" asp-action="PendingOrderList">Pending Orders</a></li>
                                <li><a asp-area="Order" asp-controller="Order" asp-action="CompletedOrderList">Completed Orders</a></li>
                            </ul>
                        </li>
                    </ul>
                </aside>
            </div>
            @RenderBody()
            <footer class="main-footer">
                <div class="footer-left">
                    Copyright &copy; 2024 <div class="bullet"></div> Design By Ashu Patel</a>
                </div>
                <div class="footer-right">
                </div>
            </footer>
        </div>
    </div>

    <!-- General JS Scripts -->
    <script src="~/assets2/modules/jquery.min.js"></script>
    <script src="~/assets2/modules/popper.js"></script>
    <script src="~/assets2/modules/tooltip.js"></script>
    <script src="~/assets2/modules/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets2/modules/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/assets2/modules/moment.min.js"></script>
    <script src="~/assets2/js/stisla.js"></script>

    <!-- JS Libraies -->
    <script src="~/assets2/modules/simple-weather/jquery.simpleWeather.min.js"></script>
    <script src="~/assets2/modules/chart.min.js"></script>
    <script src="~/assets2/modules/jqvmap/dist/jquery.vmap.min.js"></script>
    <script src="~/assets2/modules/jqvmap/dist/maps/jquery.vmap.world.js"></script>
    <script src="~/assets2/modules/summernote/summernote-bs4.js"></script>
    <script src="~/assets2/modules/chocolat/dist/js/jquery.chocolat.min.js"></script>

    <!-- Page Specific JS File -->
    <script src="~/assets2/js/page/index-0.js"></script>

    <!-- Template JS File -->
    <script src="~/assets2/js/scripts.js"></script>
    <script src="~/assets2/js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>